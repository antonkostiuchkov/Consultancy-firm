.lead
  color #111

  &:hover
    color #111

  h1
    font-size 26px
    margin 0
  p
    letter-spacing 0.3px

.nav
  list-style-type none
  padding 0
  margin 50px 0 70px 0
  display flex
  justify-content space-between

  a
    width 220px
    padding-top 10px
    box-shadow inset 0 1px 0 0 rgba(0,0,0,0.8)

    &:hover
      box-shadow inset 0 4px 0 0 rgba(0,0,0,0.8)



.hero
  background-image url(img/hero-img.jpg)
  background-size cover
  background-position center
  height 350px
  color white
  padding 50px

  .hero-text
    width 510px
    float left
    letter-spacing 0.7px

    h2
      font-weight 300
      color white
      margin 0
      font-size 30px
      line-height 1.4

    hr
      margin 20px 0

.page
  lost-utility: clearfix

.footer
  font-size 14px
  float right
  margin 80px 0